    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Sample.SimpleShellTopBar.Views.Pages.FirstRootPage"
    Title="FirstRootPage">

    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="20">
        <Label 
            Text="First root page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            Text="Go to detail page"
            Background="Black"
            HorizontalOptions="Center"
            Clicked="ButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>