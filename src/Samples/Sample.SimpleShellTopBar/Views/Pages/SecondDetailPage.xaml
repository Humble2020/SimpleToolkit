    xmlns:controls="clr-namespace:Sample.SimpleShellTopBar.Views.Controls"
    x:Class="Sample.SimpleShellTopBar.Views.Pages.SecondDetailPage"
    Title="Second Detail Page"
    
    x:Name="thisPage">

    <controls:TopBarScaffold>
        <controls:TopBarScaffold.TitleView>
            <Image
