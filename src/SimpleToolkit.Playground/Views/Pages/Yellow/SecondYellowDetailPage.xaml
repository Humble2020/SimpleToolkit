<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleToolkit.SimpleShell.Playground.Views.Pages.SecondYellowDetailPage"
             Title="SecondYellowDetailPage">
    <Grid BackgroundColor="Goldenrod">
        <Label
            FontSize="20"
            Text="Second yellow detail page"
            TextColor="White"
            TextTransform="Uppercase"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <VerticalStackLayout
            VerticalOptions="End">
            <Button Text="Go to root page" Clicked="RootButton_Clicked" Style="{StaticResource YellowPageNavigationButton}"/>
            <Button Text="Go to third detail page" Clicked="ThirdButton_Clicked" Style="{StaticResource YellowPageNavigationButton}"/>
            <Button Text="Go to fourth detail page" Clicked="FourthButton_Clicked" Style="{StaticResource YellowPageNavigationButton}"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>