<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SimpleToolkit.SimpleShell.Playground.Views.Pages.GreenPage"
    Title="GreenPage">
    <Grid BackgroundColor="ForestGreen">
        <Label
            FontSize="20"
            Text="Green page"
            TextColor="White"
            TextTransform="Uppercase"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <VerticalStackLayout
            VerticalOptions="End">
            <Button Text="Go to first detail page" Clicked="FirstDetailClicked" Style="{StaticResource GreenPageNavigationButton}"/>
            <Button Text="Go to second yellow detail page" Clicked="YellowDetailClicked" Style="{StaticResource GreenPageNavigationButton}"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>